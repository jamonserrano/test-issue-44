{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "./src",
    "lib": ["es2020"],
    "strict": true,
    "types": ["node", "jest", "jest-preset-stylelint"],
    "allowJs": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}